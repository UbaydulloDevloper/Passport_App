<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPassport">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--ActionBar-->
            <View
                android:id="@+id/actionBar_view"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/primary_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:src="@drawable/ic_group"
                app:layout_constraintBottom_toBottomOf="@id/actionBar_view"
                app:layout_constraintLeft_toLeftOf="@id/actionBar_view"
                app:layout_constraintTop_toTopOf="@id/actionBar_view" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuqaroning ma’lumotlarini qo’shish"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/actionBar_view"
                app:layout_constraintLeft_toRightOf="@id/btn_back"
                app:layout_constraintRight_toRightOf="@id/actionBar_view"
                app:layout_constraintTop_toTopOf="@id/actionBar_view" />
            <!--ActionBar-->

            <EditText
                android:id="@+id/f_Name"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="10dp"
                android:background="#EDEBEB"
                android:gravity="center"
                android:hint="Fuqaroning ismi"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/actionBar_view"
                app:layout_constraintWidth_percent="0.8" />

            <EditText
                android:id="@+id/f_lastName"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="10dp"
                android:background="#EDEBEB"
                android:gravity="center"
                android:hint="Fuqaroning familiyasi"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/f_Name"
                app:layout_constraintWidth_percent="0.8" />

            <EditText
                android:id="@+id/f_o_name"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="10dp"
                android:background="#EDEBEB"
                android:gravity="center"
                android:hint="Otasining ismi"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/f_lastName"
                app:layout_constraintWidth_percent="0.8" />

            <Spinner
                android:id="@+id/spinner_country"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="10dp"
                android:background="#EDEBEB"
                android:gravity="center"
                android:hint="Viloyat"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/f_o_name"
                app:layout_constraintWidth_percent="0.8" />

            <EditText
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="10dp"
                android:background="#EDEBEB"
                android:gravity="center"
                android:hint="Shahar, tuman"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinner_country"
                app:layout_constraintWidth_percent="0.8" />

            <EditText
                android:id="@+id/locations_home"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="10dp"
                android:background="#EDEBEB"
                android:gravity="center"
                android:hint="Uyining manzili"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location"
                app:layout_constraintWidth_percent="0.8" />

            <EditText
                android:id="@+id/p_o_date"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="10dp"
                android:background="#EDEBEB"
                android:gravity="center"
                android:inputType="date"
                android:hint="Pasport olgan vaqti"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/locations_home"
                app:layout_constraintWidth_percent="0.8" />

            <EditText
                android:id="@+id/p_o_date_end"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="10dp"
                android:background="#EDEBEB"
                android:gravity="center"
                android:inputType="date"
                android:hint="Pasport muddati"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/p_o_date"
                app:layout_constraintWidth_percent="0.8" />

            <Spinner
                android:id="@+id/spinner_2"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="10dp"
                android:background="#EDEBEB"
                android:gravity="center"
                android:hint="Jinsi"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/p_o_date_end"
                app:layout_constraintWidth_percent="0.8" />

            <ImageView
                android:id="@+id/image_user"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20sp"
                android:src="@drawable/image_defalte"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinner_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Fuqaroning rasmi 3x4"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_user" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="15sp"
                android:elevation="10dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.06"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_user"
                app:layout_constraintVertical_bias="0.4"
                app:layout_constraintWidth_percent="0.4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/primary_color"
                    android:gravity="center"
                    android:text="Saqlash"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>